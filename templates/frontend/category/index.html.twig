{% extends 'base.html.twig' %}

{% block header %}
    {% include 'frontend/header.html.twig' %}
{% endblock %}

{% block body %}
    <h1>Menú</h1>

    <h2>Lista de categorías</h2>

    {% for category in categories %}
        <p>
            <a href="{{ path('subcategory_index', {'categorySlug': category.slug}) }}">{{ category.name }}</a>
        </p>
    {% else %}
        <p>
            No subcategories have been found.
        </p>
    {% endfor %}
{% endblock %}